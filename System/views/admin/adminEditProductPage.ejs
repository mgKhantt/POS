<%- contentFor('style') %>
<style>
  .form-label {
    font-weight: 600;
  }

  .card {
    border-radius: 12px;
  }

  .btn {
    border-radius: 6px;
  }

  img.rounded {
    transition: transform 0.2s ease-in-out;
  }

  img.rounded:hover {
    transform: scale(1.1);
  }
</style>

<%- contentFor('body') %>
<div class="container mt-5">
  <div class="card shadow p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <button class="btn btn-outline-secondary" onclick="window.history.back()">
          <i class="fa fa-arrow-left"></i> Back
        </button>
      </div>

      <h2 class="card-title mb-0 text-center flex-grow-1">Edit Product</h2>

      <div>
        <button class="btn btn-outline-primary me-2" onclick="window.location.href='/admin/products/create-product/category-manager'">
          <i class="fa fa-folder"></i> Category Manager
        </button>
        <button class="btn btn-outline-primary" onclick="window.location.href='/admin/products/create-product/brand-manager'">
          <i class="fa fa-tags"></i> Brand Manager
        </button>
      </div>
    </div>

    <hr>

    <!-- Edit Form -->
    <form action="/admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
      <div class="row">
        <!-- Product Name -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Product Name</label>
          <input
            type="text"
            name="name"
            value="<%= product.name %>"
            class="form-control"
            required
          />
        </div>

        <!-- Product Code -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Product Code</label>
          <input
            type="text"
            name="code"
            value="<%= product.code %>"
            class="form-control"
            required
          />
        </div>

        <!-- Category -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Category</label>
          <select name="category" class="form-select" required>
            <% categories.forEach(category => { %>
              <option value="<%= category.name %>" <%= product.category === category.name ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <!-- Brand -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Brand</label>
          <select name="brand" class="form-select" required>
            <% brands.forEach(brand => { %>
              <option value="<%= brand.name %>" <%= product.brand === brand.name ? 'selected' : '' %>>
                <%= brand.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <!-- Price -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Price</label>
          <input
            type="number"
            name="price"
            value="<%= product.price %>"
            class="form-control"
            step="0.01"
            required
          />
        </div>

        <!-- Stock -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Stock</label>
          <input
            type="number"
            name="stock"
            value="<%= product.stock %>"
            class="form-control"
            min="0"
            required
          />
        </div>

        <!-- Image -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Product Image</label>
          <input type="file" name="image" class="form-control" />
          <% if (product.imageUrl) { %>
            <div class="mt-2">
              <input type="hidden" name="existingImage" value="<%= product.imageUrl %>" />
              <img
                src="<%= product.imageUrl %>"
                alt="Product Image"
                width="100"
                class="rounded shadow-sm border"
              />
            </div>
          <% } %>
        </div>
      </div>

      <!-- Update Button -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-success px-4">
          <i class="fa fa-save"></i> Update Product
        </button>
      </div>
    </form>
  </div>
</div>
